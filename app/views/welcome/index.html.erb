<section class="margin-10">
  <div class="row">
    <div class="col-lg-10">
      <section>
        <h3 class="block-title">Los más vendidos en Jalisco</h3>
        <div id="carousel-product-generic" class="carousel slide carousel-products" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#carousel-product-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-product-generic" data-slide-to="1"></li>
            <li data-target="#carousel-product-generic" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <%= @jalisco.each_slice(3) do | productList | %>
              <div class="item products-carousel">
              <% productList.each do | product | %>
                  <div class="column-sm column-specific">
                    <div class="widget datepicker">
                      <div align="center" class="image">
                        <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/#{product.name.downcase}.jpg",width:"100%" %>
                        <center style="font-size:26px;" class="text-over-image"><%= link_to "#{ product.name.capitalize }", {:controller => "products",:action=> "show",:id => "#{product.id}"}, {} %></center>
                      </div>
                      <div>
                        <table width="100%"  style="padding: 8px 8px;">
                          <tr>
                            <td style="padding: 8px 8px;text-align: left;"><i class="fa fa-map-marker fa-lg" aria-hidden="true"></i> <%= product.origin.capitalize %></td>
                            <td style="padding: 8px 8px;text-align: right;">
                              <% if product.weight > 20 %>
                                Municipio: Chachapa
                              <% elsif product.weight < 10 %>
                                Municipio: Tequila
                              <% else %>
                                Municipio: Acatlán de Juárez
                              <% end %>
                            </td>
                          </tr>
                          <tr>
                            <td style="padding: 8px 8px;text-align: left;"><i class="fa fa-usd fa-lg" aria-hidden="true"></i><%= product.price %></td>
                            <td style="padding: 8px 8px;text-align: right;">Empacado: <%= product.packaging %></td>
                          </tr>
                        </table>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
            <% end %>
          </div>
          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-product-generic" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#carousel-product-generic" role="button" data-slide="next">
            <span class="sr-only">Next</span>
          </a>
        </div>
      </section>
