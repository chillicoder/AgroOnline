<p id="notice"><%= notice %></p>

<h2 class="block-title block-title--top-larger">Products</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sku</th>
      <th>Price</th>
      <th>Weight</th>
      <th>Min order Quantity</th>
      <th>Origin</th>
      <th>Packaging</th>
      <th>Category</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @products %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.sku %></td>
        <td><%= product.price %></td>
        <td><%= product.weight %></td>
        <td><%= product.min_order_quantity %></td>
        <td><%= product.origin %></td>
        <td><%= product.packaging %></td>
        <td><%= product.category %></td>
        <td><%= product.provider %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

