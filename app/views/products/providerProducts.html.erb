<div class="container">
  <div class="row">
    <div class="col s12 m12">
      <div class="col s12 m8">
        <h2 class="heading">Mis Productos</h2>
      </div>
      <div class="col s12 m4">
        <%= link_to "Nuevo Producto", new_product_provider_path, :class => "waves-effect waves-light btn" %>
      </div>
    </div>
    <div class="row">
      <% if @provider.products %>
        <div align="center">
          <h5> Aun no tienes Productos, <%= link_to "Agrega uno a tu Oferta", new_product_provider_path %></h5>
        </div>
      <% end %>
      <% @provider.products.each do | product | %>
        <%= product.name %>
      <% end %>
    </div>
  </div>
</div>
