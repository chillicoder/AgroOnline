<section class="page-indecator">
    <div class="container">
        <h2 class="heading">Product</h2>
        <!-- Breadcrumb pattern -->
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Shop</li>
        </ol>
        <!-- Default one color divider -->
        <div class="divider divider--bottom-md"></div>
    </div>
</section>
<section class="container">
    <div class="product product--single">
        <div class="row">
            <div class="col-sm-4">
                <!-- Preview slider main area -->
                <div id="slideshow" class="slideshow slidershow-large">
                  <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/#{@product.category.name.downcase}.jpg", width: "100%" %>
                </div>

            </div>
            <!-- end col -->
            <div class="col-sm-8">
                <div class="product__decribe product__decribe--full">
                    <span class="product__price"><%= @product.name %></span>
                    <h3 class="product__title">$ <%= @product.price %></h3>
                    <p class="product__info">
                      <%= @product.min_order_quantity %>
                      <%= @product.origin %>
                      <%= @product.packaging %>
                      <%= @product.category %>
                    </p>
                    <div class="product-rating">
                        <div class="score"></div>
                    </div>
                    <div class="product__more">
                        <a class="link product__link scroll-link" href="#"><i class="fa fa-comment"></i><%= @product.category %></a>
                    </div>
                    <!-- Quantity select -->
                    <p class="sub-header divider--middle mobile--divider"><h2>Sending Method:</h2></p>
                      <div class="col-md-12">
                        <div class="col-md-12">
                          <h4><i class="fa fa-truck" aria-hidden="true"></i> Truck</h4>
                          <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/pckgua1.jpg" %>
                          <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/pckgua2.jpg" %>
                          <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/pckgua3.jpg" %>
                          <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/pckgua4.jpg" %>
                          <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/pckgua5.jpg" %>
                        </div>
                      </div>

                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <div class="tabs tabs--minimal divider--middle">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li class="active"><a href="#one" data-toggle="tab">Provider</a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="one">
              <div class="col-md-2">
                <div class="image-container image-container--max image-container--border-inner person__image">
                  <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/user_unknow.jpg" %>
                </div>
              </div>
              <div class="col-md-10">
                <p><b>Name:</b> <%= @product.provider %>. </p>
                <p><b>Country:</b> <%= @product.provider.country %>.</p>
                <p><b>Telephone:</b> 5555-5555</p>
                <p><b>Email:</b> provider@nos-unimos.com</p>
                <p>Sed tincidunt libero sit amet atnte molestie eu faucibus ante auctor. In a diam lorem, quis ornare arcu. Nunc vel turpis sit </p>
              </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <section class="page-indecator">
        <div class="container">
            <h2 class="heading">Contact</h2>
            <!-- Breadcrumb pattern -->
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li><a href="about.html">About</a></li>
                <li class="active">Contact</li>
            </ol>
            <!-- Default one color divider -->
            <div class="divider"></div>
            <div class="form-error form-error--line alert alert-danger">
                <span class="alert-market">
            <i class="fa fa-ban"></i>
          </span>
                <div class="form-error__holder"></div>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fa fa-times"></i></button>
            </div>
            <div class="divider--bottom-md"></div>
        </div>
    </section>
    <!-- end section show current page and breadcrumb -->
    <section class="container">
        <div class="row">
            <div class="one-column col-xs-8 col-xs-offset-2 col-md-8 col-md-offset-2">
                  <%= form_tag("/provider/contact/#{@product.id}", method: "post", class:"contact contact--clean contact--icon") do %>
                    <%= hidden_field(:product,:id) %>
                    <h3 class="heading-helper heading-helper--large">Contactar</h3>
                    <div class="contact__field-container contact__field--name">
                      <%= text_field_tag 'name', nil, class:"contact__field ", placeholder:"full name:" %>
                    </div>
                    <div class="contact__field-container contact__field--email">
                        <%= text_field_tag 'email', nil, class:"contact__field contact__field--email ", placeholder:"email:" %>
                    </div>
                    <div class="contact__field-container contact__field--area">
                        <%= text_area_tag 'message', nil, class:"contact__field contact__area", placeholder:"message: " %>
                    </div>
                    <%= submit_tag 'Send message', class:"btn btn--decorated btn-warning btn-submit" %>
                <% end %>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </section>
    <!-- end tabs -->
    <h2 class="block-title block-title--top-large-s block-title--bottom">Other Products Provider</h2>
    <div class="row product-wrapper">
      <% @product.provider.products.each do | productProvider |%>
      <div class="col-sm-6 col-md-3">
          <!-- Product preview -->
          <div class="product product--round product--flow">
              <div class="product__marker">new</div>
              <div class="product__control">
              </div>
              <div class="product__photo">
                  <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/#{productProvider.category.name.downcase}.jpg", width: "100%" %>
              </div>
              <span class="product__title"><%= productProvider.name %></span>
          </div>
      </div>
      <% end %>
    </div>
    <!-- end row -->
</section>
