<section class="page-indecator">
    <div class="container">
      <h2 class="heading"><span class="text-primary"><%= @product.name.capitalize %></span> de <span class="text-primary"><%= @product.origin.capitalize %></span> producido por <span class="text-primary"><%= @product.provider.to_s %></span></h2>
        <!-- Breadcrumb pattern -->
        <ol class="breadcrumb">
            <li><a href="#">Inicio</a></li>
            <li class="active">Producto</li>
        </ol>
        <!-- Default one color divider -->
        <div class="divider divider--bottom-md"></div>
    </div>
</section>
<section class="container">
    <div class="product product--single">
        <div class="row">
          <div class="col-md-12">
            <div class="col-md-3">
              <% if @product.category.name == 'Frutas' %>
                <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/mango.jpg",width: "100%" %>
              <% else %>
              <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/#{@product.category.name.downcase}.jpg", width: "100%" %>
              <% end %>
            </div>
            <div class="col-md-6">
              <font size="5"><%= @product.name %></font>
              <dl class="dl-horizontal">
                <dt>Precio:</dt>
                <dd><font color="#1E90FF"><%= @product.price %></font> / TON</dd>
                <dt>Cantidad Min por Orden:</dt>
                <dd><%= @product.min_order_quantity %></dd>
                <dt>Capacida de Suministro:</dt>
                <dd>150 Toneladas</dd>
                <dt>Estado:</dt>
                <dd><%= @product.origin %></dd>
                <dt>Metodos de Pago:</dt>
                <dd>Efec/Transf/TDD/TDC</dd>
              </dl>
              <div class="row" style="background-color:#E0E0E0;">
                <div class="col-md-12">&nbsp;</div>
                <div class="col-sm-3 col-sm-offset-1">
                  <%= link_to "<button class='btn btn-warning'><i class='fa fa-envelope' aria-hidden='true'></i> Contactar Proveedor</button>".html_safe, {:controller => "products",:action=> "contact",:id => "#{@product.id}", :email => "email@emial.com"}, {} %>
                </div>
                <div class="col-sm-3 col-sm-offset-3">
                  <button class="btn btn-primary"><i class="fa fa-comments-o" aria-hidden="true"></i> Chat</button>
                </div>
                <div class="col-md-12">&nbsp;</div>
              </div>
            </div>
            <div class="col-sm-4 col-md-3">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <%= @product.provider %>
                  </h3>
                </div>
                <div class="panel-body">
                  <div class="media">
                    <div class="media-left">
                      <a href="#">
                        <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/user_unknow.jpg",style:"width: 32px; height: 32px;", class:"img-rounded media-object" %>
                      </a>
                    </div>
                    <div class="media-body">
                      <i class="fa fa-location-arrow" aria-hidden="true"></i> <%= @product.provider.country %><br>
                      <i class="fa fa-phone" aria-hidden="true"></i> (01 55)5555-55555
                      <hr>
                      <i class="fa fa-credit-card" aria-hidden="true"></i> Medios de pago: Transferencia, efectivo
                      <br>
                      <br>
                      <%= link_to "<button class='btn btn-primary'>Contactar</button>".html_safe, {:controller => "products",:action=> "contact",:id => "#{@product.id}", :email => "email@emial.com"}, {} %>
                    </div>
                  </div>
                </div>
              </div>
          </div>
          </div>

    </div>
    <div class="tabs tabs--minimal divider--middle">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#details" data-toggle="tab">Detalles</a></li>
          <li ><a href="#company" data-toggle="tab">Compañia</a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="details">
              <div class="col-sm-4">
                <dl class="dl-horizontal">
                  <dt>Estilo:	</dt>
                  <dd>Natural</dd>
                  <dt>Tipo:	</dt>
                  <dd>Fruta</dd>
                  <dt>Forma:	</dt>
                  <dd>Enteros, Todas las formas disponibles</dd>
                  <dt>Proceso de preservación:	</dt>
                  <dd>Agua</dd>
                </dl>
              </div>
              <div class="col-sm-4">
                <dl class="dl-horizontal">
                  <dt>Tipo de cultivo:	</dt>
                  <dd>Comun</dd>
                  <dt>Empacado:	</dt>
                  <dd>Caja</dd>
                  <dt>Certificación:	</dt>
                  <dd>BRC</dd>
                  <dt>Duración:	</dt>
                  <dd>2 semanas</dd>
                  <dt>Peso (kg):	</dt>
                  <dd>20</dd>
                </dl>
              </div>
              <div class="col-sm-4">
                <dl class="dl-horizontal">
                  <dt>Lugar de Origen:	</dt>
                  <dd><%= @product.origin.capitalize %></dd>
                  <dt>Nombre de la Marca:	</dt>
                  <% if @product.name == 'Mango' %>
                    <dd> Carlos Jauregui </dd>
                  <% else %>
                    <dd>Productores Mexicanos</dd>
                  <% end %>
                </dl>
              </div>
            </div>
            <div class="tab-pane" id="company">
              <div class="col-md-6" style="border-right: solid silver;">
                <dl class="dl-horizontal">
                  <dt>Tipo de Negocio:</dt>
                  <dd>Empresa Comercial</dd>
                  <br>
                  <dt>Productos Principales:</dt>
                  <% if @product.name == 'Mango' %>
                    <dd>Mangos y derivados</dd>
                  <% else %>
                    <dd>Productos Alimenticios</dd>
                  <% end %>
                  <br>
                  <dt>Ingresos Anuales:</dt>
                  <dd>MXN $ 5 Millones - MXN $10 Millones</dd>
                </dl>
              </div>
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dt>Ubicación:</dt>	<dd><%= @product.origin.capitalize %></dd><br>
                  <dt>Numeros de Empleados:</dt>	<dd>11 - 50 Personas	</dd><br>
                  <dt>Año Establecido:</dt>	<dd>2013	</dd>
                </dl>
            </div>
        </div>
    </div>&nbsp;&nbsp;&nbsp;
      <%= render 'contact' %>

    <!-- end tabs -->
    <h2 class="block-title block-title--top-large-s block-title--bottom">Otros Productos del Proveedor</h2>

    <div class="swiper-container fading-slider">
        <div class="swiper-wrapper">
          <% @product.provider.products.each do | productProvider |%>
            <!--Slide-->
            <div class="swiper-slide swiper-no-swiping">
                <div class="product product--round product--flow">
                    <div class="product__marker">nuevo</div>
                    <div class="product__control">
                    </div>
                    <div class="product__photo">
                      <% if productProvider.category.name == 'Frutas' %>
                        <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/mango.jpg",width: "100%" %>
                      <% else %>
                      <%= image_tag "http://com.agroonline.s3.amazonaws.com/agroonline/#{productProvider.category.name.downcase}.jpg", width: "100%" %>
                      <% end %>
                    </div>
                    <span class="product__title"><%= productProvider.name %></span>
                </div>
            </div>
          <% end %>
        </div>
        <div class="fade-slider-control">
            <a class="prev-arrow" href="#"><i class="fa fa-angle-left"></i></a>
            <a class="next-arrow" href="#"><i class="fa fa-angle-right"></i></a>
        </div>
        <!-- end slider controls-->
        <div class="clearfix"></div>
        <div class="product-slider-pagination fade-pagination"></div>
    </div>
    <!-- end row -->
</section>
<script>
$(document).ready(function() {

    fadingSlider();
    staffSlider();

        $('.achivement-item').one('inview', function(event, visible) {
            if (visible == true) {
                $('.achivement-item__marker.start-1').addClass('zoomIn');
                $('.achivement-item__marker.start-2').addClass('zoomIn stage2');
                $('.achivement-item__marker.start-3').addClass('zoomIn stage3');
            }
        });

        $('.promo__btn').one('inview', function(event, visible) {
            if (visible == true) {
                $('.promo__btn').addClass('fadeInUp');

                setTimeout(function() {
                    $('.promo__btn').removeClass('fadeInUpStart');
                }, 1000);
            }
        });

        $('.about ').one('inview', function(event, visible) {
            if (visible == true) {
                $('.about-img').addClass('fadeInUp');
            }
        });

});
</script>
